#!/bin/bash

# EAC log files are UTF-16

set -e

SAVEIFS=$IFS
IFS=$(echo -en "\n\b")

dir=$1
quality=$2

for log in $(find $dir -name '*.log'); do
    echo $log
    tracks=$(iconv -f UTF-16 -t UTF-8 $log | grep 'Track quality')
    tracknumber=1
    for track in $tracks; do
        echo $tracknumber $(echo $track | awk -v quality=$quality '{print $3 < quality}')
        (( tracknumber++ ))
    done

done

IFS=$SAVEIFS

exit 0
