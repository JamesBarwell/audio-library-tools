#!/bin/bash

set -e

SAVEIFS=${IFS}
IFS=$(echo -en "\n\b")

print_usage() {
    echo "hash_directory: create an MD5 hash of all files in a directory"
    echo ""
    echo "  How to use:"
    echo "  hash_directory <input_directory>"
}

INPUT_DIR_ARG=$1

if [ -z "${INPUT_DIR_ARG}" ]; then
    print_usage
    exit 1
fi

INPUT_DIR=$(readlink -f "${INPUT_DIR_ARG}")

if [ ! -d "${INPUT_DIR}" ]; then
    echo "Input directory not found at: ${INPUT_DIR}"
    print_usage
    exit 1
fi

# md5sum must run from directory to keep filenames relative to that directory
pushd ${INPUT_DIR}
echo "Creating checksums for directory: ${INPUT_DIR}"
md5sum --binary *.mp3 *.flac *.cue *.log > ./checksum.md5
popd

IFS=${SAVEIFS}
